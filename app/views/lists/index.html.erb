<h2>Check Lists</h2>

<p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= link_to 'Show', list_path(list) %></td>
    <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
    <% end %>
  </tbody>
</table>
</p>

<p><%= link_to 'New List', new_list_path %></p>
